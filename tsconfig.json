{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./src/**/*.json", "cfg"],
  "exclude": ["node_modules"]
}
